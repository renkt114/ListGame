<Window x:Class="ListSLG.window.subWindow.TechSubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListSLG.window.subWindow"
        mc:Ignorable="d"
        Title="TechSubWindow" Height="300" Width="500"
        WindowStyle="None">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="14*" />
            <RowDefinition Height="43*"/>
            <RowDefinition Height="32*" />
            <RowDefinition Height="31*" />
            <RowDefinition Height="33*" />
            <RowDefinition Height="41*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="11*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10" />
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>


        <Label Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4"
               Content="技術研究　詳細を確認あるいは採用したい技術のボタンを押してください"
               HorizontalAlignment="Left"
               VerticalAlignment="Top"/>

        <Button Grid.Row="1" Grid.Column="5"
             Content="閉じる"
               HorizontalAlignment="Center"
            VerticalAlignment="Top" Width="70" Margin="0,3,0,0" Click="Close_Button_Click"/>

        <GroupBox Grid.Row="2" Grid.Column="1"
                  Grid.RowSpan="3" Grid.ColumnSpan="5"
                  Header="汎用技術"/>

        <GroupBox Grid.Row="6" Grid.Column="1"
                  Grid.RowSpan="1" Grid.ColumnSpan="1"
                  Header="伝説の時代" >
        </GroupBox>

        <GroupBox Grid.Row="6" Grid.Column="1"
          Grid.RowSpan="1" Grid.ColumnSpan="1"
          Header="伝説の時代" >
        </GroupBox>

        <GroupBox Grid.Row="6" Grid.Column="2"
          Grid.RowSpan="1" Grid.ColumnSpan="1"
          Header="英雄の時代" >
        </GroupBox>


        <GroupBox Grid.Row="6" Grid.Column="3"
            Grid.RowSpan="1" Grid.ColumnSpan="1"
            Header="激動の時代" >
        </GroupBox>

        <GroupBox Grid.Row="6" Grid.Column="4"
            Grid.RowSpan="1" Grid.ColumnSpan="1"
            Header="戦乱の時代" >
        </GroupBox>

        <GroupBox Grid.Row="6" Grid.Column="5"
            Grid.RowSpan="1" Grid.ColumnSpan="1"
            Header="革命の時代" >
        </GroupBox>

        <Button Grid.Row="3" Grid.Column="1"
            Content="配偶"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="1" Click="Tech_Button_Click"/>

        <Button Grid.Row="3" Grid.Column="2"
            Content="歩兵"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="12" Click="Tech_Button_Click"/>

        <Button Grid.Row="4" Grid.Column="1"
            Content="騎兵"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="2" Click="Tech_Button_Click"/>

        <Button Grid.Row="4" Grid.Column="2"
            Content="投射兵"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="3" Click="Tech_Button_Click"/>

        <Button Grid.Row="4" Grid.Column="3"
            Content="昇格"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="4" Click="Tech_Button_Click"/>

        <Button Grid.Row="4" Grid.Column="4"
            Content="分家"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="5" Click="Tech_Button_Click"/>

        <Button Grid.Row="4" Grid.Column="5"
            Content="家内配偶"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="6" Click="Tech_Button_Click"/>


        <Button Grid.Row="6" Grid.Column="1"
            Content="歩兵防御+"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="7" Click="Tech_Button_Click"/>

        <Button Grid.Row="6" Grid.Column="2"
            Content="騎兵機動+"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="8" Click="Tech_Button_Click"/>

        <Button Grid.Row="6" Grid.Column="3"
            Content="投射攻撃+"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="9" Click="Tech_Button_Click"/>

        <Button Grid.Row="6" Grid.Column="4"
            Content="無料将軍+"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="10" Click="Tech_Button_Click"/>

        <Button Grid.Row="6" Grid.Column="5"
            Content="敗北時威信+"
            HorizontalAlignment="Center"
            VerticalAlignment="Center" Width="70" Tag="11" Click="Tech_Button_Click"/>

    </Grid>
</Window>
