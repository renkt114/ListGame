<Window x:Class="ListSLG.window.subWindow.AdvisorSubWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ListSLG.window.subWindow"
        mc:Ignorable="d"
        Title="AdvisorSubWindow" Height="350" Width="800">
    <Grid>
        <RichTextBox x:Name="AdviceRichTextBox" Margin="270,40,40,60" VerticalScrollBarVisibility="Visible" >
            <FlowDocument>
                <Paragraph>
                    <Run Text="RichTextBox"/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <Image Margin="10,10,550,10" Source="/resources/image/character/secretary_01.png" Stretch="Fill" Width="240" Height="300"/>

    </Grid>
</Window>
